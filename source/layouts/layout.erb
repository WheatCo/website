<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <%= stylesheet_link_tag "normalize", "all" %>
    <link rel="stylesheet" type="text/css" href="//cloud.typography.com/7763312/634548/css/fonts.css" />
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="page col center gap-4">
      <div class="row bottom left navbar main gap-3">
        <a href="/"><img src="/images/logo.svg" alt="Wheat Co." class="logo"></a>
        <div class="fill"></div>
        <%# <a class="navbar-link" href="#">Services</a> %>
        <a class="navbar-link" href="/hire/">Contact</a>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
